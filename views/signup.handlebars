<form class="signup-form">
    <div>
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" placeholder="Username"/>
    </div>
    <div>
        <label for="email-signup">Email address:</label>
        <input type="text" id="email-signup" placeholder="name@example.com"/>
    </div>
    <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" placeholder="Password"/>
    </div>
    <div>
        <button type="submit" class="btn btn-info">Signup</button>
        <a href="/login"><button type="button" class="btn btn-info">Login</button></a>
    </div>
</form>
<script src="/javascript/signup.js"></script>